terraform {
  required_providers {
    aws = {
      source = "hashicorp/aws"
      version = "6.13.0"
    }
  }
}

provider "aws" {
  region = var.region
  profile = "default"
}

resource "aws_s3_bucket" "pipeline-bucket" {
  bucket = "mycloudpipeline"
  acl    = "private"

  server_side_encryption_configuration {
    rule {
      apply_server_side_encryption_by_default {
        sse_algorithm = "AES256"
      }
    }
  }

  versioning {
    enabled = true
  }

  tags = {
    Name        = "My bucket for my pipeline."
    Environment = "Dev"
  }
}